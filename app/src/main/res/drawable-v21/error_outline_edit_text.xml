<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <item android:state_selected="true">
        <shape android:shape="rectangle">

            <solid android:color="@color/edit_text_background" />

            <stroke android:width="1dp" android:color="@color/error" />

            <padding android:bottom="15dp" android:left="15dp" android:right="15dp" android:top="15dp" />

            <corners android:radius="11dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">

            <solid android:color="@color/edit_text_background" />

            <stroke android:width="1dp" android:color="@color/primaryDark" />

            <padding android:bottom="15dp" android:left="15dp" android:right="15dp" android:top="15dp" />

            <corners android:radius="11dp" />
        </shape>
    </item>
</selector>